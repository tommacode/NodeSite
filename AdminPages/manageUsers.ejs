<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;600&display=swap"
      rel="stylesheet"
    />
    <script src="/login.js"></script>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tom Blake</title>
    <!--Meta Tags-->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:domain" content="tomblake.me" />
    <meta
      name="twitter:title"
      property="og:title"
      itemprop="name"
      content="The webite made by Tom, for Tom"
    />
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content="A one page site that says a lot about what I do and who I am"
    />
    <link rel="stylesheet" href="../css.css" />
  </head>
  <body>
    <div id="content" style="display: block">
      <nav>
        <a href="/login" class="listLink" style="font-size: 1rem" id="loginInfo"
          >Not logged in</a
        >
        <ul>
          <li><a class="listLink" href="/">Home</a></li>
          <li><a class="listLink" href="/projects">Articles</a></li>
        </ul>
      </nav>
      <!--Big header to draw attention-->
      <header>
        <h1>Manage Articles/Projects</h1>
      </header>
        Reset All
      </button>
      <div class="borders" id="Users">
        <h3>Users (<%= Users.length %>)</h3>
        <% for (let i = 0; i < Users.length; i++) { %>
          <div class="borders">

            <img
              class="CommentProfilePicture"
              src="/api/avatar/<%= Users[i].ProfilePicture %>"
              alt="Profile Picture"
              style="float: left"
            />
            <h3><%= Users[i].Username %></h3>
            <p><strong>Account Created: </strong><%- Users[i].Time %></p>
            <p><strong>Sessions:</strong> <%- Users[i].Sessions %> | <strong>Comments:</strong> <%- Users[i].Comments %> | <strong>Liked Projects:</strong> <%- Users[i].Likes %></p>
            <button style="float: left;" onclick="DeletePfp('<%- Users[i].id %>')" class="clearBtn">Remove</button>
            <button id="<%- Users[i].id %>ModifyProfilePicture" onclick="ModifyPFP('<%- Users[i].id %>')" class="clearBtn">Change Pfp: <%= Users[i].ModifyProfilePicture %></button>
            <button id="<%- Users[i].id %>WriteComments" onclick="WriteComments('<%- Users[i].id %>')" class="clearBtn">Write Comments: <%= Users[i].WriteComments %></button>
            <br>
          </div>
          <% } %>
      </div>
      <!--Project Thumbnails-->
      <div id="Users"></div>
      <div id="footer">
        <h3>Footer</h3>
        <!--Links-->
        <ul class="linkBar">
          <li>
            <a
              target="_blank"
              href="https://github.com/tommacode"
              class="listLink"
              >My Github</a
            >
          </li>
          <li>
            <a
              target="_blank"
              href="https://tomhasawebsite.com"
              class="listLink"
              >Other Website</a
            >
          </li>
          <li><a href="#" class="listLink">Back to the top!</a></li>
        </ul>
      </div>
    </div>
    <script>
      function ModifyPFP(ID) {
        fetch('/api/management/ModifyProfilePicture/' + ID, {
          method: 'GET',
        })
          .then((res) => res.json())
          .then((data) => {
            if (data.Error) {
              alert(data.Error)
            } else {
              document.getElementById(ID + 'ModifyProfilePicture').innerHTML = 'Change Pfp: ' + data.mode
            }
          })
      }
      function WriteComments(ID) {
        fetch('/api/management/WriteComments/' + ID, {
          method: 'GET',
        })
          .then((res) => res.json())
          .then((data) => {
            if (data.Error) {
              alert(data.Error)
            } else {
              document.getElementById(ID + 'WriteComments').innerHTML = 'Write Comments: ' + data.mode
            }
          })
      }
      function DeletePfp(ID) {
        fetch('/api/management/DeletePfp/' + ID, {
          method: 'GET',
        })
          .then((data) => {
            location.reload()
          })
      }
    </script>
  </body>
</html>
