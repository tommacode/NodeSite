<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Photos | Tomblake.me</title>
    <%- include('Partials/head.html') %>
  </head>
  <body>
    <nav><%- include('Partials/nav.ejs') %></nav>

    <h1>Photo Gallery</h1>
    <h3>(Beta Test)</h3>
    <% if (!None) { %> <% for (let i = 0; i < PhotoList.length; i++) { %>
    <div class="PictureFrameWrapper">
      <div class="PictureFrame">
        <img
          src="/photos/<%= PhotoList[i].Path %>"
          alt="Drone Image 1"
          style="width: 100%"
        />
        <h3 class="PictureFrameTitle"><%= PhotoList[i].Name %></h3>
      </div>
      <div class="PictureFrameText">
        <p>Location: <%= PhotoList[i].Location %></p>
        <p>Description: <%= PhotoList[i].Description %></p>
      </div>
    </div>
    <% } %> <% } else { %>
    <h1>No images at the moment</h1>
    <% } %>
    <script>
      //Make the menu open and close
      function OpenMenu() {
        //Get the ul that is a direct child of the nav
        var element = document.querySelector("#MenuItems");
        if (element.className == "hidden") {
          element.className = "";
        } else {
          element.className = "hidden";
        }
      }
    </script>
    <footer id="footer"><%- include('Partials/footer.html') %></footer>
  </body>
</html>
