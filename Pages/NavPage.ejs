<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navigation</title>
    <!--Meta Tags-->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:domain" content="tomblake.me" />
    <meta
      name="twitter:title"
      property="og:title"
      itemprop="name"
      content="Navigation Page | Tomblake.me"
    />
    <meta
      name="twitter:description"
      property="og:description"
      itemprop="description"
      content="Navigation Page | Tomblake.me"
    />
    <%- include('Partials/head.html') %>
  </head>
  <body>
    <div>
      <nav><%- include('Partials/nav.html') %></nav>
      <!--Big header to draw attention-->
      <header>
        <h1>Articles</h1>
      </header>
      <!--Search-->
      <div class="borders">
        <h3>Search</h3>
        <input
          oninput="Search()"
          type="text"
          id="searchBar"
          placeholder="Search..."
        />
      </div>
      <!--Project Thumbnails-->
      <div id="projects">
        <% for (i = 0; i < Articles.length; i++) { %>
          <div class="borders" >
            <a href="/projects/<%= Articles[i].Title.replaceAll(" ", "-") %>" style="color: inherit;">
              <p style="float: right;"><%= Articles[i].Time %></p>
              <h3><%= Articles[i].Title %></h3>
              <% if (User == true) {%>
              <% if (Articles[i].Viewed == false) { %>
              <p style="float: right;">Unread</p>
              <% } %>
              <% } %>
              <p><%= Articles[i].Appetizer %></p>
            </a>
          </div> 
        <%} %>
      </div>
      <footer id="footer"><%- include('Partials/footer.html') %></footer>
      <script>
        function Search() {
          var search = document.getElementById("searchBar").value;
          var projects = document.getElementById("projects").children;
          for (var i = 0; i < projects.length; i++) {
            var project = projects[i];
            var title = project.children[0].children[1].innerHTML;
            if (title.toLowerCase().includes(search.toLowerCase())) {
              project.style.display = "block";
            } else {
              project.style.display = "none";
            }
          }
        }

        //Make the menu open and close
        function OpenMenu() {
          //Get the ul that is a direct child of the nav
          var element = document.querySelector("#MenuItems");
          if (element.className == "hidden") {
            element.className = "";
          } else {
            element.className = "hidden";
          }
        }
      </script>
    </div>
  </body>
</html>
